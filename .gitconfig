[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green
    changed = red
    untracked = cyan

[core]
    whitespace = space-before-tab,-indent-with-non-tab,tab-in-indent,trailing-space,cr-at-eol,tabwidth=4
    warnAmbiguousRefs = false

[alias]
    st = status -sb
    ci = commit
    br = branch
    co = checkout
    cp = cherry-pick
    df = diff
    dfc = diff --cached
    lg = log -p
    lol = log --graph --decorate --oneline
    lola = log --graph --decorate --oneline --all
    ls = ls-files
    rb = pull --rebase
    svnid = !git --no-pager log --all --pretty=format:\"%H %s\" --grep
    rmd = !git status --porcelain | awk ' /^ D/ { print $2 }' | xargs git rm
    ff = merge --ff-only
    resolve = update-index
    cia = commit --amend
    rbc = rebase --continue
    cpc = cherry-pick --continue
    wdfc = diff -b -w --word-diff=color --cached --word-diff-regex='\\(|\\)|[^[:space:]()]+'
    files = show --pretty="format:" --name-only

[rerere]
    enabled = true

[merge]
    conflictstyle = diff3
[push]
	default = simple
[help]
	autocorrect = 1
